{
  "manifest_version": 3,
  "name": "Nyx Guard",
  "description": "Evaluates pages for potential malicious behavior, unethical ads, and unsafe content.",
  "version": "0.1.0",
  "icons": {
    "16": "icons/nyx-main-16.png",
    "32": "icons/nyx-main-32.png",
    "48": "icons/nyx-main-48.png",
    "128": "icons/nyx-main-128.png"
  },
  "action": {
    "default_title": "Nyx Guard",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/nyx-main-16.png",
      "32": "icons/nyx-main-32.png",
      "48": "icons/nyx-main-48.png",
      "128": "icons/nyx-main-128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "notifications"
  ],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "nyxguard-trackers",
        "enabled": true,
        "path": "dnr/rules.json"
      }
    ]
  }
}
